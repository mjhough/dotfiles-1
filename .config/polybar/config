[module/bspwm]
type = internal/bspwm

format = <label-state> <label-mode>

pin-workspaces = true 
enable-click = true
enable-scroll = true 

label-occupied-foreground = #a89984
label-focused-foreground = #fbf1c7
label-urgent-foreground = #cc241d
label-empty-foreground = #665c54

[module/time]
type = internal/date

interval = 1.0

date =  %H:%M

[module/date]
type = internal/date
date =  %Y-%m-%d% 
label = %date%

[module/battery]
type = internal/battery

battery = BAT0

poll-interval = 1

full-at = 95

label-discharging = %percentage%%
label-charging = %percentage%%
label-full = %percentage%%

format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
format-charging =  <label-charging>

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/volume]
type = internal/pulseaudio
format-volume = %{A3:exec kitty -e pulsemixer & disown:}<ramp-volume> <label-volume>%{A}
format-muted = %{A3:exec kitty -e pulsemixer & disown:} 0%%{A}
interval = 1

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/mpd]
type = internal/mpd

label-offline = mpd is offline
format-online = %{A3:exec kitty -e ncmpcpp & disown:}<icon-prev> <toggle> <icon-next> <bar-progress> <label-song>%{A}
format-offline = %{A3:exec kitty -e ncmpcpp & disown:}<label-offline>%{A}
host = 127.0.0.1
port = 6600
icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 128 
label-song-ellipsis = true

bar-progress-width = 10
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─

[module/backlight]
type = internal/xbacklight

; Use the following command to list available cards:
; $ ls -1 /sys/class/backlight/
card = intel_backlight

